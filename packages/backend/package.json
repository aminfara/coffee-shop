{
  "name": "@cs/backend",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist coverage",
    "fix:modules": "echo '{\"type\":\"module\"}' > ./dist/package.json",
    "build": "tsc --project ./tsconfig.build.json && npm run fix:modules",
    "serve": "node dist/main.js",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "test:debug": "vitest --test-timeout 120000"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119"
  },
  "dependencies": {
    "@cs/common": "*",
    "@fastify/sensible": "^5.2.0",
    "fastify": "^4.18.0"
  }
}
